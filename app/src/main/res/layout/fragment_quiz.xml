<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/layout_no_voca"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <TextView
                android:id="@+id/text_view_no_voca"
                style="@style/TextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/quiz_no_vocabulary" />

            <TextView
                android:id="@+id/text_view_cur_voca"
                style="@style/TextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_view_no_voca"
                android:layout_centerHorizontal="true"
                android:text="@string/current_voca_count" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layout_quiz"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <View
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="3" />

            <TextView
                android:id="@+id/quiz_word"
                style="@style/QuizTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="8"
                android:gravity="center_vertical"
                android:text="@string/quiz_word_example" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="12"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <LinearLayout
                    android:id="@+id/quiz_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:divider="@drawable/empty_vertical_divider"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:showDividers="middle">

                    <TextView
                        android:id="@+id/quiz_option1"
                        style="@style/QuizOptionStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/quiz_option_example" />

                    <TextView
                        android:id="@+id/quiz_option2"
                        style="@style/QuizOptionStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/quiz_option_example" />

                    <TextView
                        android:id="@+id/quiz_option3"
                        style="@style/QuizOptionStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/quiz_option_example" />

                    <TextView
                        android:id="@+id/quiz_option4"
                        style="@style/QuizOptionStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/quiz_option_example" />

                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2" />

            <hsk.practice.myvoca.ui.customview.VersusView
                android:id="@+id/versus_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="5" />


        </LinearLayout>

    </FrameLayout>
</layout>